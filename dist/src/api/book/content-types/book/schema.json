    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "subtitle": {
            "type": "string"
        },
        "description": {
            "type": "richtext"
        },
        "author": {
            "type": "string"
        },
        "color": {
            "type": "customField",
            "customField": "plugin::standard-strapi-toolkit.color-picker"
        },
        "icon": {
            "type": "customField",
            "customField": "plugin::standard-strapi-toolkit.icon-picker"
        },
        "coverDetail": {
            "type": "string"
        },
        "url": {
            "type": "string"
        },
        "displayOrder": {
            "type": "integer",
            "default": 0,
