{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": "Stores job and internship listings with full details, requirements, and links."
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "department": {
      "type": "string",
      "required": false
    },
    "location": {
      "type": "string"
    },
    "workMode": {
      "type": "enumeration",
      "enum": ["ONSITE", "REMOTE", "HYBRID"],
      "required": true
    },
    "employmentType": {
      "type": "enumeration",
      "enum": ["FULL_TIME", "PART_TIME", "INTERNSHIP", "CONTRACT"],
      "required": true
    },
    "salaryRange": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "requirements": {
      "type": "richtext"
    },
    "responsibilities": {
      "type": "richtext"
    },
    "benefits": {
      "type": "richtext"
    },
    "tags": {
      "type": "customField",
      "customField": "plugin::standard-strapi-toolkit.simple-tags"
    },
    "applyUrl": {
      "type": "string"
    },
    "deadline": {
      "type": "date"
    },
    "companyName": {
      "type": "string"
    },
    "companyWebsite": {
      "type": "string"
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "isVisible": {
      "type": "boolean",
      "default": true
    }
  }
}
