{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member"
  },
  "attributes": {
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "name": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 100
    },
    "position": {
      "type": "string",
      "required": true,
      "minLength": 2,
      "maxLength": 50
    },
    "tagline": {
      "type": "text",
      "maxLength": 1000
    },
    "talk_about": {
      "type": "json",
      "default": []
    },
    "linkedin_url": {
      "type": "string",
      "regex": "^https://(www\\.)?linkedin\\.com/.*$",
      "maxLength": 200
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "FOUNDER",
        "HUMAN",
        "AI_AGENT"
      ],
      "required": true,
      "default": "HUMAN"
    },
    "display_order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "is_visible": {
      "type": "boolean",
      "default": true
    }
  }
}